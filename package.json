    "@upstash/redis": "^1.34.3",
    "bcryptjs": "^2.4.3",
    "lucide-react": "latest",
    "next": "^14.0.4",
    "next-auth": "^4.24.5",
    "prisma": "^5.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.7.3",
    "zod": "^3.24.1"
