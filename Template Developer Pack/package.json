{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Project development template with standardized processes",
  "scripts": {
    "init": "ts-node scripts/init-template.ts",
    "normalize-endings": "ts-node --project scripts/tsconfig.json scripts/normalize-endings.ts",
    "fix-docs": "ts-node --project scripts/tsconfig.json scripts/fix-docs.ts",
    "update-timestamps": "ts-node --project scripts/tsconfig.json scripts/update-timestamps.ts",
    "check-docs": "ts-node --project scripts/tsconfig.json scripts/check-docs.ts",
    "check-references": "ts-node --project scripts/tsconfig.json scripts/check-references.ts",
    "find-duplicates": "ts-node --project scripts/tsconfig.json scripts/find-duplicates.ts",
    "validate-env": "ts-node scripts/validate-env.ts",
    "test": "mocha -r ts-node/register \"tests/**/*.test.ts\"",
    "test:watch": "mocha -r ts-node/register \"tests/**/*.test.ts\" --watch",
    "test:coverage": "nyc mocha -r ts-node/register \"tests/**/*.test.ts\"",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:load": "k6 run tests/load/**/*.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "verify": "npm run normalize-endings && npm run update-timestamps && npm run check-docs && npm run find-duplicates && npm run check-references && npm run fix-docs && npm run validate-env",
    "verify:full": "npm run verify && npm run lint && npm run test && npm run test:e2e"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.11.5",
    "dotenv": "^16.3.1",
    "k6": "^0.0.0",
    "@types/k6": "^0.45.3",
    "express": "^4.18.2",
    "@types/express": "^4.17.21",
    "ws": "^8.16.0",
    "@types/ws": "^8.5.10",
    "pg": "^8.11.3",
    "@types/pg": "^8.10.9",
    "redis": "^4.6.12",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "zod": "^3.22.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "@types/chai": "^4.3.11",
    "sinon": "^17.0.1",
    "@types/sinon": "^17.0.3",
    "nyc": "^15.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "ts-node-dev": "^2.0.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 