{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../dist/scripts",
    "types": ["node"],
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 