{
  "api": {
    "timeout": 30000,
    "retries": 3,
    "rateLimit": {
      "windowMs": 15 * 60 * 1000,
      "max": 100
    },
    "cors": {
      "origin": ["https://api.bulkbuyergroup.com"],
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    }
  },
  "websocket": {
    "reconnectInterval": 2000,
    "maxRetries": 5,
    "heartbeatInterval": 30000,
    "pingTimeout": 5000
  },
  "analytics": {
    "batchSize": 1000,
    "flushInterval": 10000,
    "retentionDays": 90,
    "sampling": {
      "default": 1.0,
      "highLoad": 0.1
    }
  },
  "cache": {
    "ttl": 3600,
    "maxSize": 10000,
    "redis": {
      "cluster": true,
      "maxConnections": 50,
      "retryStrategy": {
        "maxAttempts": 5,
        "delay": 1000
      }
    }
  },
  "database": {
    "poolSize": 20,
    "idleTimeoutMillis": 30000,
    "connectionTimeoutMillis": 2000,
    "maxUses": 7500,
    "statement_timeout": 60000
  },
  "security": {
    "jwt": {
      "expiresIn": "1d",
      "refreshExpiresIn": "7d",
      "algorithm": "HS256"
    },
    "bcrypt": {
      "saltRounds": 12
    },
    "rateLimit": {
      "loginAttempts": 5,
      "lockoutDuration": 900000
    }
  },
  "monitoring": {
    "metrics": {
      "interval": 10000,
      "retention": 604800
    },
    "logging": {
      "level": "info",
      "maxFiles": 10,
      "maxSize": "100m"
    },
    "alerts": {
      "errorThreshold": 0.01,
      "latencyThreshold": 1000,
      "memoryThreshold": 0.9
    }
  },
  "scaling": {
    "minInstances": 2,
    "maxInstances": 10,
    "targetCPUUtilization": 0.7,
    "targetMemoryUtilization": 0.8
  }
} 