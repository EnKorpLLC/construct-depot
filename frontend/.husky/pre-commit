#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run ESLint on staged files
npx lint-staged

# Run type checking
npm run type-check

# Check for case-sensitive path issues
npx case-police .

# Verify component naming conventions
npx ts-node scripts/verify-component-names.ts

# Exit with error if any check fails
if [ $? -ne 0 ]; then
  echo "❌ Pre-commit checks failed. Please fix the issues and try again."
  exit 1
fi

echo "✅ Pre-commit checks passed!" 